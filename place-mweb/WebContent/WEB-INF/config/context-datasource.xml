<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- 	<bean id="testDAO" class="place.dao.TestDAO">
		<property name="ss" ref="sqlSessionTemplate"></property>
	</bean> -->
	<bean id="badlistDAO" class="place.dao.BadlistDAO">
		<property name="ss" ref="sqlSessionTemplate"></property>
	</bean>
	<bean id="commentDAO" class="place.dao.CommentDAO">
		<property name="ss" ref="sqlSessionTemplate"></property>
	</bean>
	<bean id="placeDAO" class="place.dao.PlaceDAO">
		<property name="ss" ref="sqlSessionTemplate"></property>
	</bean>
	<bean id="recommend_infoDAO" class="place.dao.Recommend_infoDAO">
		<property name="ss" ref="sqlSessionTemplate"></property>
	</bean>
	<bean id="reviewDAO" class="place.dao.ReviewDAO">
		<property name="ss" ref="sqlSessionTemplate"></property>
	</bean>
	<bean id="userDAO" class="place.dao.UserDAO">
		<property name="ss" ref="sqlSessionTemplate"></property>
	</bean>
	<bean id="wishlistDAO" class="place.dao.WishlistDAO">
		<property name="ss" ref="sqlSessionTemplate"></property>
	</bean>
	<bean id="testDAO" class="place.dao.TestDAO">
		<property name="ss" ref="sqlSessionTemplate"></property>
	</bean>
	
	<!-- db정보 -->
	<bean id="property"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="/WEB-INF/config/db.properties"></property>
	</bean>
	<!-- db연결 객체 -->
	<bean id="dataSource" class="org.apache.tomcat.dbcp.dbcp2.BasicDataSource">
		<property name="driverClassName" value="${driver}"></property>
		<property name="url" value="${url}"></property>
		<property name="username" value="${username}"></property>
		<property name="password" value="${password}"></property>
		<property name="initialSize" value="3"></property>
		<property name="maxTotal" value="10"></property>
		<property name="minIdle" value="5"></property>
	</bean>
	<bean id="sqlSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
		<property name="configLocation" value="/WEB-INF/config/sqlconfig.xml"></property>
	</bean>
	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactoryBean"></constructor-arg>
	</bean>
</beans>
