<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="badlist">
  
  <select id="selectAll" resultType="badlistVO">
  	SELECT * FROM BADLIST
  </select>
  
  <select id="selectByUser" parameterType="int" resultType="badlistVO">
  	SELECT * FROM BADLIST
  	WHERE USER_NO=#{user_no}
  </select>
  
  <select id="selectByPlace" parameterType="int" resultType="badlistVO">
  	SELECT * FROM BADLIST
  	WHERE PLACE_NO=#{place_no}
  </select>
  
  <insert id="insertOne" parameterType="badlistVO">
  	INSERT INTO BADLIST (USER_NO,PLACE_NO)
  	VALUES (#{user_no},#{place_no})
  </insert>
  
  
  </mapper>