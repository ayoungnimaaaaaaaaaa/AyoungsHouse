<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="review">
  
  <select id="selectAll" resultType="reviewVO">
  	SELECT * FROM REVIEW
  </select>
  <select id="selectByUser" parameterType="int" resultType="reviewVO">
  	SELECT * FROM REVIEW
  	WHERE USER_NO = #{user_no}
  </select>
  <select id="selectByPlace" parameterType="int" resultType="reviewVO">
  	SELECT * FROM REVIEW
  	WHERE PLACE_NO = #{place_no}
  </select> 
  <insert id="insertOne" parameterType="reviewVO">
  	INSERT INTO REVIEW 
  	(USER_NO,PLACE_NO,TITLE,REVIEW_DATE,GRADE,CONTENT,OPEN) 
  	VALUES 
  	(#{user_no},
  	#{place_no},
  	#{title},
  	#{review_date},
  	#{grade},
  	#{content},
  	#{open})
  </insert>
  
  <delete id="deleteOne" parameterType="int">
  	DELETE FROM REVIEW 
  	WHERE REVIEW_NO = #{review_no}
  </delete>
  
  <update id="updateOne" parameterType="reviewVO">
  	UPDATE REVIEW
  	SET TITEL = #{title},
  	REVIEW_DATE = #{review_date},
  	CONTENT = #{content},
  	OPEN = #{open},
  	GRADE = #{grade}
  	WHERE REVIEW_NO=#{review_no}
  </update>
		  
  
  </mapper>